{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "enabledManagers": ["npm"],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "excludePackagePatterns": [
        "@patternfly/*"
      ],
      "enabled": false
    },
    {
      "datasources": ["npm"],
      "packagePatterns": [
        "@patternfly/*"
      ],
      "followTag": "alpha",
      "groupName": "patternfly"
    }
  ],
  "includeForks": true,
  "rangeStrategy": "bump"
}
